@using EasyGamesWeb.Constants
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EASYGAMESWEB</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>

    <!-- Used Bootstrap for navigation bar -->
    <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">EASY GAME WEB</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Home/Index">
                            Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Privacy">Privacy</a>
                    </li>

                    @* ---------- My Orders link for logged in user ---------- *@
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/UserOrder/UserOrders">My Orders</a>
                        </li>
                    }
                    

                    @if (User.IsInRole(Roles.Admin.ToString()))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/OwnerOperations/AllOrders">Orders</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Stocks/Index">Stocks</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Product/Index">AddProducts</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Category/Index">AddCategory</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Sales" asp-action="Dashboard">Sales Dashboard</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Users/Index">Users</a>
                        </li>

                    }
                </ul>

                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="my-2">
            <partial name="_Notif" />
        </div>
        @RenderBody()
    </div>

    <script>
        loadCartCount();
        async function loadCartCount() {
            try {
                var response = await fetch(`/Cart/getTotalItemCart`);
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                }
            } catch (err) {
                console.log(err);
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
