@model EasyGamesWeb.Controllers.SalesDashboardVM

<h3>Sales Dashboard</h3>
<div class="alert alert-dark">
    <strong>Total Profit:</strong> @Model.TotalProfit.ToString("C")
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Order ID#</th>
            <th>User</th>
            <th>Product</th>
            <th class="text-end">Qty</th>
            <th class="text-end">Unit Price</th>
            <th class="text-end">Unit Cost</th>
            <th class="text-end">Revenue</th>
            <th class="text-end">Profit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.CreateDate.ToString("dd-MMM-yyyy")</td>
                <td>@r.OrderId</td>
                <td>@r.UserId</td>
                <td>@r.ProductName</td>
                <td class="text-end">@r.Quantity</td>
                <td class="text-end">@r.UnitPrice.ToString("C")</td>
                <td class="text-end">@r.UnitCostAtSale.ToString("C")</td>
                <td class="text-end">@r.LineRevenue.ToString("C")</td>
                <td class="text-end">@r.LineProfit.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
