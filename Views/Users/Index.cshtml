@model IEnumerable<EasyGamesWeb.Models.DTOs.UserRowVM>
@{
    ViewData["Title"] = "Users";
}
<h2 class="mt-3 mb-3">Users</h2>
<p><a class="btn btn-primary" asp-action="Create">Create User</a></p>
<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Email</td>
                <td>@string.Join(", ", u.Roles)</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@u.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-warning" asp-action="ResetPassword" asp-route-id="@u.Id">Reset Password</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@u.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
