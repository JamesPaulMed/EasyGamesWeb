@model EasyGamesWeb.Controllers.UserSalesHistoryVM
@using System.Globalization

<div class="mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>My Sales</h4>
        <div>
            <span class="badge bg-dark fs-6 me-2">Tier: @Model.Tier</span>
            <span class="badge bg-secondary fs-6">Total Profit: @Model.ProfitTotal.ToString("C", CultureInfo.CurrentCulture)</span>
        </div>
    </div>

    @if (Model.Tier != EasyGamesWeb.Constants.UserTier.Platinum)
    {
        <div class="alert alert-info">
            You need <strong>@Model.RemainingToNext.ToString("C")</strong> more to reach the next tier.
        </div>
    }

    @if (Model.Rows?.Any() == true)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Order #</th>
                    <th>Product</th>
                    <th class="text-end">Qty</th>
                    <th class="text-end">Unit Price</th>
                    <th class="text-end">Unit Cost</th>
                    <th class="text-end">Revenue</th>
                    <th class="text-end">Profit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Rows)
                {
                    <tr>
                        <td>@r.CreateDate.ToString("dd-MMM-yyyy")</td>
                        <td>@r.OrderId</td>
                        <td>@r.ProductName</td>
                        <td class="text-end">@r.Quantity</td>
                        <td class="text-end">@r.UnitPrice.ToString("C")</td>
                        <td class="text-end">@r.UnitCostAtSale.ToString("C")</td>
                        <td class="text-end">@r.LineRevenue.ToString("C")</td>
                        <td class="text-end">@r.LineProfit.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-secondary">No sales yet.</div>
    }

    <a href="/Identity/Account/Manage" class="btn btn-outline-dark mt-3">Back</a>
</div>
