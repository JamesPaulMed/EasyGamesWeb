@model IEnumerable<EasyGamesWeb.Models.OwnerStock>
@{
    ViewData["Title"] = "Owner Stock";
}

<h1 class="mt-3 mb-3">Owner Stock</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Stock Entry</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th class="text-end">Quantity</th>
            <th class="text-end">Buy</th>
            <th class="text-end">Sell</th>
            <th class="text-end">Unit Profit</th>
            <th class="text-end">Margin %</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var p = item.Product;
            <tr>
                <td>@p?.ProductName</td>
                <td class="text-end">@item.Quantity</td>
                <td class="text-end">@p?.BuyPrice.ToString("C")</td>
                <td class="text-end">@p?.SellPrice.ToString("C")</td>
                <td class="text-end">@((p?.UnitProfit ?? 0m).ToString("C"))</td>
                <td class="text-end">@((p?.MarginPercent)?.ToString("0.##") ?? "-")%</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
