@model EasyGamesWeb.Models.OwnerStock
@{
    ViewData["Title"] = "Delete Owner Stock";
}
<h1 class="mt-3 mb-3">Delete Owner Stock</h1>

<h5>Are you sure you want to delete this stock entry?</h5>
<dl class="row">
    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@Model.Product?.ProductName</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
