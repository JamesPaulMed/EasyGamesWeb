@model EasyGamesWeb.Models.OwnerStock
@{
    ViewData["Title"] = "Owner Stock Details";
}
<h1 class="mt-3 mb-3">Owner Stock Details</h1>

<dl class="row">
    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@Model.Product?.ProductName</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>
</dl>

<p>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
</p>
