@model OrderStatusUpdateModel
@{
    ViewData["Title"] = "updateOrderStatus";
}

<h2> Update Order Status</h2>

<a class="my-2 btn btn-primary" asp-action="AllOrders">Back</a>
<form style="width:50%" asp-action="updateOrderStatus" method="post" class="p-2">
    <input type="hidden" asp-for="OrderId"/>
    <div class="mb-2">
        <label>Order Status</label>
        <select class="form-control" asp-for="OrderStatId" asp-items="@Model.OrderStatList">
            <option value="">Select The Order Status</option>
        </select>

        <span class="text-danger" asp-validation-for="OrderStatId"></span>

    </div>

    <button type ="submit" class="btn btn-primary">Confirm</button>

    @if (TempData["msg"] != null ) {
        <div class="text-info my-2">@TempData["msg"]</div>
    } 

</form>



