@{
    ViewData["Title"] = "Assign User to Shop";
}
<h3>Assign User to Shop</h3>

<form asp-action="Create" method="post" class="mt-3 row g-3">
    <div class="col-md-6">
        <label class="form-label">Shop</label>
        <select class="form-select" name="shopId" asp-items="@(ViewBag.Shops)"></select>
    </div>
    <div class="col-md-6">
        <label class="form-label">User</label>
        <select class="form-select" name="userId" asp-items="@(ViewBag.Users)"></select>
    </div>
    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Assign</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
