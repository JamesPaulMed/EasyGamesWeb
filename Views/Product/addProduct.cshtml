@model ProductsDTO
@{
}

<div style="width:50%">
    <h1> Add Product </h1>
    <a asp-action="Index" asp-controller ="Product" class="btn btn-primary">Back</a>
    <form asp-action="addProduct" enctype="multipart/form-data"> 
        
        <div class="my-2">
            <label> Product* </label>
            <input type="text" class="form-control" asp-for="ProductName" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label> Category </label>
            <select class="form-control" asp-for= "CategoryId" asp-items="Model.CategoryList"><option value ="">Select a category</option></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label> Description* </label>
            <input type="text" class="form-control" asp-for="ProductDescription" />
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label> Price* </label>
            <input type="number" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label> Image* </label>
            <input type="file" class="form-control" asp-for="ImageFile" />
        </div>


        <div class="my-2">
           <button type ="submit" class="btn btn-info">Add</button>
        </div>

    
    
    </form>
</div>