@model IEnumerable<EasyGamesWeb.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h1 class="mt-3 mb-3">Products</h1>

<p>
    <a class="btn btn-primary" asp-action="addProduct">Add Product</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th style="width:100px;">Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Source</th>
            <th class="text-end">Buy</th>
            <th class="text-end">Sell</th>
            <th class="text-end">Unit Profit</th>
            <th class="text-end">Margin %</th>
            <th>Active</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(m => m.ProductName))
        {
            var imgPath = string.IsNullOrWhiteSpace(item.Image) ? null : Url.Content($"~/uploads/{item.Image}");
            <tr>
                <td>
                    @if (!string.IsNullOrWhiteSpace(imgPath))
                    {
                        <img src="@imgPath" alt="@item.ProductName" style="height:75px;width:auto;" />
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </td>
                <td>@item.ProductName</td>
                <td>@item.Category?.CategoryName</td>
                <td>@item.Source</td>
                <td class="text-end">@item.BuyPrice.ToString("C")</td>
                <td class="text-end">@item.SellPrice.ToString("C")</td>
                <td class="text-end">@item.UnitProfit.ToString("C")</td>
                <td class="text-end">@((item.MarginPercent)?.ToString("0.##") ?? "-")%</td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="updateProduct" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
