@model IEnumerable<Product>

@{
}

<h2>Products</h2>

<a asp-action = "addProduct" asp-controller = "Product" class="btn btn-primary"> Add More</a>

@if (Model?.Count()>0)

{
    
    <table class="table table-striped my-2"> 

        <tr>
            <th>Image</th>
            <th>Product</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>Action</th>
        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (string.IsNullOrEmpty(product.Image))
                    {
                        <img src="/img/noimage.jpg" style="width:80px; height:100px" />
                    }
                    else

                    {
                        <img src="/img/@product.Image" style="width:80px; height:100px" />
                    }
                </td>
                <td>@product.ProductName</td>
                <td>@product.ShortDesc</td>
                <td>@product.Categories.CategoryName</td>
                <td>@product.Price</td>

                <td>
                    <a asp-action="updateProduct" asp-controller="Product" asp-route-id = "@product.Id" class="btn btn-success">Update</a>
                    <a asp-action="deleteProduct" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-danger" onclick="returnwindow.confirm('Are you sure')">Delete</a>
                </td>
            </tr>
        }



    </table>
}
