@model ProductsDTO
@{
}

<div style="width:50%">
    <h1> Update Book </h1>
    <a asp-action="Index" asp-controller="Product" method="post" class="btn btn-primary">Back</a>
    <form asp-action="updateProduct" enctype="multipart/form-data">

        <input type ="hidden" asp-for = "Id"/>
        <input type="hidden" asp-for = "Image"/>

        <div class="my-2">
            <label> Product* </label>
            <input type="text" class="form-control" asp-for="ProductName" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label> Category* </label>
            <select class="form-control" asp-for="CategoryId" asp-items="Model.CategoryList"><option value="">Select a category</option></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

         <div class="my-2">
            <label> ShortDescription* </label>
            <input type="text" class="form-control" asp-for="ProductDescription" />
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label> Price* </label>
            <input type="number" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label> Image</label>
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src ="/img/@Model.Image" style="width:100px; height:80px"/>
            }
            <input type="file" class="form-control" asp-for="ImageFile" />
        </div>


        <div class="my-2">
            <button type="submit" class="btn btn-info">Update</button>
        </div>



    </form>
</div>